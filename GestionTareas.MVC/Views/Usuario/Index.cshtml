@model IEnumerable<GestionTareas.Modelos.Usuario>

@{
    ViewData["Title"] = "Usuarios Registrados";
}

<div class="container my-5">
    <h2 class="mb-4">Usuarios Registrados</h2>

    <a asp-action="Create" class="btn btn-success mb-3">Registrar nuevo usuario</a>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th style="width: 160px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.Correo</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-primary btn-sm me-1">Editar</a>
                            <a asp-action="Delete" asp-route-id="@usuario.Id" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>