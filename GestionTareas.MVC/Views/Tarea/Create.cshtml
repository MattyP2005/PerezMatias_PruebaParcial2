@model GestionTareas.Modelos.Tarea

@{
    ViewData["Title"] = "Crear Tarea";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm rounded">
                <div class="card-body">
                    <h2 class="card-title mb-4">Crear Tarea</h2>

                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Titulo" class="form-label">Título</label>
                            <input asp-for="Titulo" class="form-control" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Estado" class="form-label">Estado</label>
                            <input asp-for="Estado" class="form-control" />
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Prioridad" class="form-label">Prioridad</label>
                            <input asp-for="Prioridad" class="form-control" />
                            <span asp-validation-for="Prioridad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FechaVencimiento" class="form-label">Fecha de Vencimiento</label>
                            <input asp-for="FechaVencimiento" type="date" class="form-control" />
                            <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProyectoId" class="form-label">Proyecto ID</label>
                            <input asp-for="ProyectoId" class="form-control" />
                            <span asp-validation-for="ProyectoId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UsuarioId" class="form-label">Usuario Asignado ID</label>
                            <input asp-for="UsuarioId" class="form-control" />
                            <span asp-validation-for="UsuarioId" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success">Guardar</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}