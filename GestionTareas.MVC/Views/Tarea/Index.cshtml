@model IEnumerable<GestionTareas.Modelos.Tarea>

<h2>Tareas</h2>

<table border="1">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>Estado</th>
            <th>Prioridad</th>
            <th>Fecha Vencimiento</th>
            <th>Proyecto ID</th>
            <th>Usuario Asignado ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarea in Model)
        {
            <tr>
                <td>@tarea.Titulo</td>
                <td>@tarea.Descripcion</td>
                <td>@tarea.Estado</td>
                <td>@tarea.Prioridad</td>
                <td>@tarea.FechaVencimiento.ToShortDateString()</td>
                <td>@tarea.ProyectoId</td>
                <td>@tarea.UsuarioId</td>
            </tr>
        }
    </tbody>
</table>

<br />
<a asp-controller="Home" asp-action="Index">Volver al Inicio</a>