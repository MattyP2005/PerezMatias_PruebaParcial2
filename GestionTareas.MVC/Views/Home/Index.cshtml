@{
    ViewData["Title"] = "Inicio";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm rounded">
                <div class="card-body text-center">
                    <h2 class="card-title mb-4">Bienvenido</h2>
                    <p class="lead">Has iniciado sesión correctamente.</p>

                    <h5 class="mt-4">Tu token es:</h5>
                    <pre class="bg-light p-3 rounded text-break" style="user-select: all;">@ViewBag.Token</pre>

                    <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger mt-4">Cerrar sesión</a>
                </div>
            </div>
        </div>
    </div>
</div>